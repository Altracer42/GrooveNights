<ActorFrame OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y"><children>
    <Layer
        File="platform"
    />
    <Layer
        File="panelglow"
        OnCommand="hidden,1;x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y"
     />    
    <Layer
        File="panelglow"
        OnCommand="diffusealpha,0;x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y"
     />   
     <Layer
        File="panelglow"
        OnCommand="%function(self) ispress=0; self:y(-50) self:diffusealpha(0) end"
        StepP1UpPressMessageCommand="%function(self) SCREENMAN:SystemMessage('p1left pressed') ispress=1 end"
        StepP1UpLiftMessageCommand="%function(self) SCREENMAN:SystemMessage('p1left lifted') ispress=0 end"
    />       
    <Layer
        File="panelglow"
        OnCommand="hidden,1;x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y"
    />
</children><ActorFrame>